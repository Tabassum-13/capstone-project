            footer{
                position: fixed;
                width: 100%;
                height:8%;
                background-color: black;
                padding: 10px;
                text-align: center;
                display: flex;
                justify-content: space-between;
                padding:1px;
                margin-bottom: 0px;
                bottom:0;

            }     
        </style>
    </head>
    <body>
       
    <section>
        <div class="section-1">
            <div class="f-l w-60">
                <div class="f-r w-75">
                    <div class="navbar">
                        <img src="https://t3.ftcdn.net/jpg/04/41/73/28/240_F_441732816_Eo3fHdX3oImKtXdkYkktCrR1mbwAT9I6.jpg" alt="logo" width="240px" height="100%">
                        <div class="nav-btns">
                            <button class="signin" onclick="signinform()">Login</button>

                            <iframe id="signinFrame" src="signin" style="display: none; width: 100%; height: 100%; position: fixed; top: 0; right: 0; border: none;"></iframe>


                            <button class="signup" onclick="signupform()">Sign up</button>
                            
                            <iframe id="signupFrame" src="signup" style="display: none; width: 100%; height: 100%; position: fixed; top: 0; right: 0; border: none;"></iframe>

                        </div>
                    </div>
                    <p class="head">CookingBook</p>
                    <p class="sub-head">Offering a range of delectable continental dishes</p>
                    <div class="flex-row">
                        <div class="search-box">
                            <input type="text" id="foodInput" placeholder="Enter your favourite dish to cook" class="search-input"/>
                            
                        </div>
                        <button class="search-btn" onclick="searchInput()">SEARCH</button>
                    </div>
                    <p class="sub-head" style="font-size: 16px;margin-top:20px;">We have a diverse menu featuring like...</p>
                    <div class="flex-row">
                        <p class="chocolates">Indian</p>
                        <p class="chocolates">British</p>
                        <p class="chocolates">French</p>
                        <p class="chocolates">Canadian</p>
                        <p class="chocolates">Japanese</p>
                        <p class="chocolates">American</p>
                    </div>
                </div>
            </div>
            <div class="f-r w-40">
                <img src="https://is1-ssl.mzstatic.com/image/thumb/PurpleSource122/v4/fa/31/71/fa317153-1434-5b24-fc79-d4fec1f6a5a6/c446f2c1-4b2d-461e-b856-7f70cfe37615_iPad_02.png/643x0w.jpg" width="100%" height="100%"/>
            </div>
        </div>
    </section>

