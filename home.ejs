                transition: all 0.5s;
            } */
            .locate-me:hover{
                background-color: #f1f1f1;
                cursor: pointer;
            }
            .chocolates{
                padding-right:20px;
                color:gray;
                font-size: 18px;
            }
            .chocolates:nth-of-type(odd){
                font-weight: bold;
            }
            #section-2{
            height:350px;
            }
            #section-3{
                height:400px;
            }
            /* .c-names{
